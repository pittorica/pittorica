{
  "extends": "@dcdavidev/tsconfig/react.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    /* Declarations */
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx"
  ]
}
